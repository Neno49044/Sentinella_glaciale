<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TEMA PRINCIPALE DELL'APP -->
    <style name="Theme.SentinellaGlaciale" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- I TUOI COLORI ORIGINALI -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Stile globale per i bottoni -->
        <item name="materialButtonStyle">@style/App.Button</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="drawerArrowStyle">@style/Widget.App.DrawerArrowStyle</item>

    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="Widget.App.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- Stile per i bottoni con angoli smussati -->
    <style name="App.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
    </style>

</resources>