<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F9FF">

    <!-- HEADER FISSO: titolo + X -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#E7F9FF">

        <TextView
            android:id="@+id/txtTitolo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <!-- STELLINA -->
        <ImageButton
            android:id="@+id/btnPreferito"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/ic_star_outline"
            android:contentDescription="@string/preferito"/>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="@string/chiudi"/>
    </LinearLayout>

    <!-- SCROLLVIEW PER IL CONTENUTO -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- IMMAGINE GHIACCIAIO -->
            <ImageView
                android:id="@+id/imgGhiacciaio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:contentDescription="@string/app_name"/>

            <!-- RAGGRUPPAMENTO MONTUOSO -->
            <TextView
                android:id="@+id/txtRaggruppamentoTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titolo_raggruppamento"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#0070A6"
                android:paddingTop="12dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/txtRaggruppamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <!-- GHIACCIAI -->
            <TextView
                android:id="@+id/txtGhiacciaiTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titolo_ghiacciai"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#0070A6"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/txtGhiacciai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <!-- BACINO IDROGRAFICO -->
            <TextView
                android:id="@+id/txtBacinoTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titolo_bacino"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#0070A6"
                android:paddingTop="8dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/txtBacino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <!-- DESCRIZIONE -->
            <TextView
                android:id="@+id/txtDescrizioneTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titolo_descrizione"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#0070A6"
                android:paddingTop="16dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:id="@+id/txtDescrizione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
